<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.metricshub</groupId>
	<artifactId>site</artifactId>
	<name>Open MetricsHub Web Site</name>
	<version>IN-PROGRESS</version>
	<description>This project contains the source for metricshub.org Web site.</description>
	<packaging>pom</packaging>

	<organization>
		<name>MetricsHub</name>
		<url>https://metricshub.com</url>
	</organization>

	<url>https://metricshub.org</url>
	<inceptionYear>2025</inceptionYear>

	<licenses>
		<license>
			<name>MIT</name>
			<url>https://spdx.org/licenses/MIT.html</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<issueManagement>
		<system>GitHub</system>
		<url>https://github.com/MetricsHub/metricshub.github.io/issues/</url>
	</issueManagement>

	<scm>
		<connection>scm:git:https://github.com/MetricsHub/metricshub.github.io.git</connection>
		<url>https://github.com/MetricsHub/metricshub.github.io</url>
		<tag>HEAD</tag>
	</scm>

	<developers>
		<developer>
			<name>Bertrand Martin</name>
			<email>bertrand@sentrysoftware.com</email>
			<roles>
				<role>Project founder</role>
			</roles>
		</developer>
	</developers>

	<properties>
		<!-- Running on CI? -->
		<runsOnCi>${env.CI}</runsOnCi>

		<!-- UTF-8 -->
		<project.build.encoding>UTF-8</project.build.encoding>
		<project.build.sourceEncoding>${project.build.encoding}</project.build.sourceEncoding>
		<project.build.resourceEncoding>${project.build.encoding}</project.build.resourceEncoding>

	</properties>

	<build>

		<!-- Actual build plugins -->
		<plugins>

			<!-- build-helper -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>3.6.0</version>
				<executions>
					<execution>
						<id>timestamp</id>
						<goals>
							<goal>timestamp-property</goal>
						</goals>
						<phase>pre-site</phase>
						<configuration>
							<name>timestamp</name>
							<pattern>YYYY-MM-dd'T'HH:mm:ss'Z'</pattern>
							<timeSource>build</timeSource>
							<timezone>GMT</timezone>
						</configuration>
					</execution>
					<execution>
						<id>today</id>
						<goals>
							<goal>timestamp-property</goal>
						</goals>
						<phase>pre-site</phase>
						<configuration>
							<name>today</name>
							<pattern>YYYY-MM-dd</pattern>
							<timeSource>build</timeSource>
							<timezone>GMT</timezone>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- license -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>license-maven-plugin</artifactId>
				<version>2.5.0</version>
				<configuration>
					<licenseName>mit</licenseName>
					<copyrightOwners>MetricsHub</copyrightOwners>
					<copyrightStringFormat>Copyright %1$s %2$s</copyrightStringFormat>
					<extraExtensions>
						<md>xml</md>
						<vm>xml</vm>
					</extraExtensions>
					<trimHeaderLine>true</trimHeaderLine>
					<canUpdateCopyright>true</canUpdateCopyright>
					<canUpdateDescription>true</canUpdateDescription>
					<processStartTag>╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲</processStartTag>
					<sectionDelimiter>჻჻჻჻჻჻</sectionDelimiter>
					<processEndTag>╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱╲╱</processEndTag>
				</configuration>
				<executions>
					<execution>
						<id>check-license</id>
						<phase>process-sources</phase>
						<goals>
							<goal>check-file-header</goal>
						</goals>
						<configuration>
							<failOnMissingHeader>true</failOnMissingHeader>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- site -->
			<plugin>
				<artifactId>maven-site-plugin</artifactId>
				<version>3.12.1</version>
				<dependencies>
					<dependency>
						<groupId>org.sentrysoftware.maven</groupId>
						<artifactId>maven-skin-tools</artifactId>
						<version>1.3.00</version>
					</dependency>
				</dependencies>
			</plugin>

			<!-- sitemap -->
			<plugin>
				<groupId>org.simplify4u.plugins</groupId>
				<artifactId>sitemapxml-maven-plugin</artifactId>
				<version>2.2.0</version>
				<executions>
					<execution>
						<goals>
							<goal>gen</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

	<reporting>
		<plugins>

			<!-- changelog -->
			<plugin>
				<artifactId>maven-changelog-plugin</artifactId>
				<version>2.3</version>
			</plugin>

			<!-- Default project-info-reports -->
			<plugin>
				<artifactId>maven-project-info-reports-plugin</artifactId>
				<version>3.9.0</version>
				<reportSets>
					<reportSet>
						<reports>
							<report>ci-management</report>
							<report>issue-management</report>
							<report>plugins</report>
							<report>scm</report>
							<report>summary</report>
							<report>team</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>

		</plugins>
	</reporting>

</project>